}
.content-table {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.courses {
  padding: 5vw 0;
  width: 33.3vw;
  border-right: 2rpx solid #ececec;
  box-sizing: border-box;
}
.courses .icon,
.teachers .icon {
