    </view>
    <view class='courses' data-type='{{courses[4].code}}' bindtap='goCourse'>
      <view class='icon'>
        <van-icon name='send-gift-o' color='#007a49' size='100rpx' />
      </view>
      <view class='text0'>{{courses[4].name}}</view>
    </view>
    <view class='courses' data-type='{{courses[5].code}}' bindtap='goCourse'>
      <view class='icon'>
