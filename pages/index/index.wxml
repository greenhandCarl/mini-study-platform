    <view class='courses' data-type='{{courses[8].code}}' bindtap='goCourse'>
      <view class='icon'>
        <van-icon name='flower-o' color='#007a49' size='100rpx' />
      </view>
      <view class='text0'>{{courses[8].name}}</view>
    </view>
  </view>
  <view class='other-box'>
    <image class='other-img' src='../../imgs/other.jpg' />
  </view>
  <signPopup isShowSign='{{isShowSign}}' bindsetShowSign='setShowSign'></signPopup>
</view>
