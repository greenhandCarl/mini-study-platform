<!--index.wxml-->
<view class="container">
  <view class='banner-container'>
    <image class='banner' src='../../imgs/banner0.jpg' />
  </view>
  <view class='content-table'>
    <view class='courses' data-type='{{courses[0].code}}' bindtap='goCourse'>
      <view class='box'>
        <view class='icon'>
          <van-icon name='friends-o' color='#007a49' size='100rpx' />
        </view>
        <view class='text0'>{{courses[0].name}}</view>
      </view>
    </view>
    <view class='courses' data-type='{{courses[1].code}}' bindtap='goCourse'>
      <view class='icon'>
        <van-icon name='todo-list-o' color='#007a49' size='100rpx' />
      </view>
      <view class='text0'>{{courses[1].name}}</view>
    </view>
    <view class='courses' data-type='{{courses[2].code}}' bindtap='goCourse'>
      <view class='icon'>
        <van-icon name='fire-o' color='#007a49' size='100rpx' />
      </view>
      <view class='text0'>{{courses[2].name}}</view>
    </view>
    <view class='courses' data-type='{{courses[3].code}}' bindtap='goCourse'>
      <view class='icon'>
        <van-icon name='coupon-o' color='#007a49' size='100rpx' />
